{% extends 'base.html.twig' %}

{% block title %}Encounter index{% endblock %}

{% block body %}
    <h1>Encounter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Combatants</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for encounter in encounters %}
            <tr>
                <td>{{ encounter.id }}</td>
                <td>{{ encounter.name }}</td>
                <td>{{ encounter.combatants ? encounter.combatants|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('encounter_show', {'id': encounter.id}) }}">show</a>
                    <a href="{{ path('encounter_edit', {'id': encounter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('encounter_new') }}">Create new</a>
{% endblock %}
