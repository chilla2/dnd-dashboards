{% extends 'base.html.twig' %}

{% block title %}Dashboard index{% endblock %}

{% block body %}
    <h1>Dashboard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CombatMode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dashboard in dashboards %}
            <tr>
                <td>{{ dashboard.id }}</td>
                <td>{{ dashboard.combatMode ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('dashboard_show', {'id': dashboard.id}) }}">show</a>
                    <a href="{{ path('dashboard_edit', {'id': dashboard.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dashboard_new') }}">Create new</a>
{% endblock %}
