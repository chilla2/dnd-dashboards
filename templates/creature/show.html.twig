{% extends 'base.html.twig' %}

{% block title %}Creature{% endblock %}

{% block body %}
<!-- creature show -->
    <h1>Creature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ creature.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ creature.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ creature.description|raw }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ creature.notes|raw }}</td>
            </tr>
            <tr>
                <th>ShowPlayers</th>
                <td>{{ creature.showPlayers ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('creature_index') }}">back to list</a>

    <a href="{{ path('creature_edit', {'id': creature.id}) }}">edit</a>

    {{ include('creature/_delete_form.html.twig') }}
{% endblock %}
