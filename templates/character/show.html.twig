{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
<!-- character show -->
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ character.description|raw }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ character.notes|raw }}</td>
            </tr>
            <tr>
                <th>ShowPlayers</th>
                <td>{{ character.showPlayers ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('character_index') }}">back to list</a>

    <a href="{{ path('character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
