{% extends 'base.html.twig' %}

{% block title %}Monster{% endblock %}

{% block body %}
<!-- monster show -->
    <h1>Monster</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ monster.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ monster.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ monster.description|raw }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ monster.notes|raw }}</td>
            </tr>
            <tr>
                <th>ShowPlayers</th>
                <td>{{ monster.showPlayers ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('monster_index') }}">back to list</a>

    <a href="{{ path('monster_edit', {'id': monster.id}) }}">edit</a>

    {{ include('monster/_delete_form.html.twig') }}
{% endblock %}
