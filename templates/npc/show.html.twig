{% extends 'base.html.twig' %}

{% block title %}NPC{% endblock %}

{% block body %}
    <h1>NPC</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ npc.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ npc.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ npc.description|raw }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ npc.notes|raw }}</td>
            </tr>
            <tr>
                <th>ShowPlayers</th>
                <td>{{ npc.showPlayers ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('npc_index') }}">back to list</a>

    <a href="{{ path('npc_edit', {'id': npc.id}) }}">edit</a>

    {{ include('npc/_delete_form.html.twig') }}
{% endblock %}
