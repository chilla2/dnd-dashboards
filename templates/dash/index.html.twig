{% extends 'base.html.twig' %}

{% block title %}Dash index{% endblock %}

{% block body %}
<!-- dash index -->
    <h1>AH/DM</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CombatMode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dash in dashes %}
            <tr>
                <td>{{ dash.id }}</td>
                <td>{{ dash.combatMode ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('dash_show', {'id': dash.id}) }}">show</a>
                    <a href="{{ path('dash_edit', {'id': dash.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dash_new') }}">Create new</a>
{% endblock %}
